.z-ringdisplay {
	margin: 40px 0;
	position: relative;
	perspective-origin: top;
	transition: transform 1s;
	overflow: hidden;
}
.z-ringdisplay-ring {
	width: 100%;
	Height: 100%;
	position: absolute;
	transform-style: preserve-3d;
	transition: transform 1s;
}